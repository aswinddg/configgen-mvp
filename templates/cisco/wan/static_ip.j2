! Configuración WAN IP Estática - Cisco IOS
! Generado automáticamente

! Configurar interfaz WAN
interface {{ wan_interface }}
 ip address {{ wan_ip }} {{ wan_mask }}
 no shutdown
 description WAN Interface
exit

! Configurar ruta por defecto
ip route 0.0.0.0 0.0.0.0 {{ gateway }}

! Configurar DNS
ip name-server {{ dns1 }}

! Configuración básica de ACL
access-list 100 permit ip 192.168.0.0 0.0.255.255 any
access-list 100 deny ip any any

! NAT para salida a internet
ip nat inside source list 100 interface {{ wan_interface }} overload

! Configuración completada